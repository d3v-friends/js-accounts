{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES5",
      "ES6"
    ],
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@js-accounts/*": [
        "./ts/*",
        "./esm/*",
        "./cjs/*"
      ]
    },
    "allowJs": true,
    "checkJs": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": [
    "./ts/**/*.ts"
  ],
  "exclude": [
    "/node_modules"
  ]
}
